<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Congress" parent="Theme.AppCompat">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- The rest of your attributes -->
        <item name="android:textColorHighlight">@color/text_link_pressed_background_on_light</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuOverflowStyle</item>
        <item name="android:contextPopupMenuStyle" tools:targetApi="N">@style/ContextPopupMenuStyle</item>
        <item name="actionDropDownStyle">@style/MyActionDropDownStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>

        <!-- Scrollbar -->
        <item name="android:scrollbarSize">@dimen/scrollbar_size</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_thumb</item>
    </style>

    <style name="Theme.Congress.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- The rest of your attributes -->
        <item name="android:textColorHighlight">@color/text_link_pressed_background_on_light</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenuOverflowStyle</item>
        <item name="android:contextPopupMenuStyle" tools:targetApi="N">@style/ContextPopupMenuStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
        <item name="actionDropDownStyle">@style/MyActionDropDownStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="android:windowBackground">@drawable/window_background</item>

        <!-- Scrollbar -->
        <item name="android:scrollbarSize">@dimen/scrollbar_size</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_thumb</item>
    </style>

    <style name="ContextPopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/popupBackground</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColorHighlight">@color/text_link_pressed_background_on_dark</item>
        <item name="android:windowBackground">@drawable/window_background</item>

        <!-- Scrollbar -->
        <item name="android:scrollbarSize">@dimen/scrollbar_size</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_thumb</item>
    </style>

    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@color/tool_bar_background</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/tool_bar_elevation</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>

    <style name="PopupMenuOverflowStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/popupBackground</item>
    </style>

    <style name="ProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/progress_bar_elevation</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/alert_dialog_button_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="MyActionDropDownStyle" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Widget.ActionBar.Title
        </item>
        <item name="android:textColor">@color/spinner_drop_down_text</item>
    </style>

    <style name="MySpinnerDropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Widget.ActionBar.Title
        </item>
    </style>

    <style name="MySpinnerDropDownItemListStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:background">@color/popupBackground</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AlarmList.Icon" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">@dimen/alarm_list_icon_width</item>
        <item name="android:layout_height">@dimen/alarm_list_icon_height</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/alarm_list_icon_layer</item>
    </style>

    <style name="ScheduleListSeparator" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_link_on_light</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ScheduleListPrimary" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/session_list_item_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
    </style>

    <style name="ScheduleListSecondary" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/session_list_item_text</item>
    </style>

    <style name="TextViewLinks">
        <item name="android:textColorLink">@color/text_link_on_light</item>
    </style>

    <!-- Session item (favorites + schedule changes) -->
    <style name="SessionItemSection">
    </style>

    <!-- Session details -->

    <style name="SessionDetailsSection">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/session_details_text</item>
        <item name="android:textSize">@dimen/session_details_text</item>
        <item name="android:paddingBottom">@dimen/session_details_section_margin_top</item>
    </style>

    <style name="SessionDetailsSection.Last" parent="SessionDetailsSection">
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="SessionDetailsSection.Long" parent="SessionDetailsSection">
        <item name="android:lineSpacingMultiplier">
            @dimen/session_details_line_spacing_multiplier
        </item>
    </style>

    <style name="SessionDetailsSection.Header" parent="SessionDetailsSection">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/session_details_section_margin_bottom</item>
    </style>

    <style name="SessionDetailsSection.Header.Long" parent="SessionDetailsSection.Header">
        <item name="android:lineSpacingMultiplier">
            @dimen/session_details_line_spacing_multiplier
        </item>
    </style>

    <style name="SessionDetailsSection.Title" parent="SessionDetailsSection.Header">
        <item name="android:textSize">@dimen/session_details_title</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="SessionDetailsSection.Subtitle" parent="SessionDetailsSection">
        <item name="android:textSize">@dimen/session_details_subtitle</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="SessionDetailsSection.Speakers" parent="SessionDetailsSection">
        <item name="android:textSize">@dimen/session_details_speakers</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">@dimen/session_details_section_margin_top</item>
        <item name="android:paddingTop">@dimen/session_details_section_margin_top</item>
    </style>

    <style name="BuildInfoItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:gravity">start</item>
    </style>

</resources>
