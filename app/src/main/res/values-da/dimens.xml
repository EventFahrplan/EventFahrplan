<resources>
    <item name="box_height" type="integer">13</item>
    <item name="max_cols" type="integer">1</item>
    <dimen name="time_width">38dp</dimen>
    <item name="min_width_dip" type="integer">160</item>
    <item name="room_title_size" type="integer">14</item>
    <dimen name="list_pane_leftright_padding">16dp</dimen>
    <dimen name="header_height">0dp</dimen>

    <!-- Scrollbar -->
    <!--
    If you use a value greater than 16dp make sure to adjust the padding
    in session_detailbar.xml and session_list_item.xml
    -->
    <dimen name="scrollbar_size">5.0dp</dimen>
    <!-- Should be half of scrollbar_size at maximum -->
    <dimen name="scrollbar_corner_radius">0dp</dimen>

    <!-- Alarm list -->
    <dimen name="alarm_list_icon_stroke_width">2dp</dimen>
    <dimen name="alarm_list_icon_width">40dp</dimen>
    <dimen name="alarm_list_icon_height">@dimen/alarm_list_icon_width</dimen>
    <dimen name="alarm_list_alarm_start_time_text">10sp</dimen>
    <dimen name="alarm_list_alarm_title_text">16sp</dimen>

    <!-- Tool bar -->
    <dimen name="tool_bar_content_inset_start">24dp</dimen>
    <dimen name="tool_bar_elevation">8dp</dimen>

    <!-- Progress bar -->
    <dimen name="progress_bar_elevation">@dimen/tool_bar_elevation</dimen>

    <!-- SnackEngage -->
    <dimen name="snack_engage_c3nav_pixel_offset">20dp</dimen>

    <!-- About -->
    <dimen name="about_horizontal_line_height">1dp</dimen>
    <dimen name="about_padding_horizontal">16dp</dimen>
    <dimen name="about_padding_top">16dp</dimen>
    <dimen name="about_padding_bottom">16dp</dimen>

    <!-- Session drawable parameters -->
    <dimen name="session_drawable_corner_radius">6dp</dimen>
    <dimen name="session_drawable_inset_top">1dp</dimen>
    <dimen name="session_drawable_inset_left">3dp</dimen>
    <dimen name="session_drawable_inset_right">1dp</dimen>
    <dimen name="session_drawable_selection_stroke_width">2dp</dimen>

    <!-- Alert dialogs -->
    <!-- See: https://www.google.de/design/spec/components/dialogs.html#dialogs-specs -->
    <dimen name="alert_dialog_content_margin">24dp</dimen>

    <!-- Session details white space -->
    <dimen name="session_details_section_margin_bottom">8dp</dimen>
    <dimen name="session_details_section_margin_top">16dp</dimen>
    <item name="session_details_line_spacing_multiplier" format="float" type="dimen">1.1</item>

    <!-- Session details text sizes -->
    <dimen name="session_detailbar_text">13sp</dimen>
    <dimen name="session_details_text">16sp</dimen>
    <dimen name="session_details_title">24sp</dimen>
    <dimen name="session_details_subtitle">16sp</dimen>
    <dimen name="session_details_speakers">13sp</dimen>
    <dimen name="session_detailbar_icon_padding">3dp</dimen>

</resources>
